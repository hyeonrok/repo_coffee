         select
             seq
             ,memberName
             ,memberId
             ,memberPwd
         	 ,memberEmail
         	 ,genderCd
         	 ,birthDay
         	 ,phoneNumber
         	 ,delNy
         	 ,regDatetime
         	 ,modDatetime
         from 
