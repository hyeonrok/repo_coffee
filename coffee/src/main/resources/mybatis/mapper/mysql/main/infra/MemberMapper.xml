	       	 </choose>
	       	 
	</select>
	
	<select id="selectOne" resultMap="resultMapObj">
		select
			seq
            ,memberName
            ,memberId
            ,memberPwd
         	,memberEmail
         	,genderCd
         	,birthDay
         	,phoneNumber
         	,delNy
         	,regDatetime
         	,modDatetime
		from member 
		where 1 = 1
			AND seq = #{seq}
	</select>
	
	<insert id="insert">
		insert into member (
		 	memberName
            ,memberId
            ,memberPwd
         	,memberEmail
         	,genderCd
         	,birthDay
         	,phoneNumber
		) values (
		#{memberName}
		,#{memberId}
		,#{memberPwd}
		,#{memberEmail}
		,#{genderCd}
		,#{birthDay}
		,#{phoneNumber}
		)
	</insert>
	
	<update id="update">
		update member
		set
			memberName = #{memberName}
            ,memberId = #{memberId}
            ,memberPwd = #{memberPwd}
         	,memberEmail = #{memberEmail}
         	,genderCd = #{genderCd}
         	,birthDay = #{birthDay}
         	,phoneNumber = #{phoneNumber}
    		where 1=1
    		and seq = #{seq}
	</update>
	
	<update id="uelete">
		update member
		set
		delNy = 1
    		where 1=1
    		and seq = #{seq}
	</update>
	
	<delete id="delete">
		delete from member
		where 1 = 1
			and seq = #{seq}
	</delete>
	

</mapper>